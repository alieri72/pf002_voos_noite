# ##############################################
# PROCESSAMENTO DE VÔOS: CHEGADAS E PARTIDAS
# ##############################################
# Este notebook processa ficheiros Excel exportados do flights4staff.ana.pt
# Pede um ficheiro de cada vez (arrivals e departures)
# Filtra e formata os dados para facilitar visualização e impressão
# ##############################################

import pandas as pd
import openpyxl
from openpyxl.styles import PatternFill, Alignment
from google.colab import files

# ===========================
# FUNÇÃO AUXILIAR: FORMATA EXCEL
# ===========================
def format_excel(df, output_file_name, sum_column_name=None):
    """
    Formata um DataFrame e grava em Excel:
    - Ajusta largura de colunas
    - Centraliza o texto
    - Aplica cores alternadas nas linhas
    - Adiciona soma de coluna no final (opcional)
    """
    # Grava DataFrame no Excel
    df.to_excel(output_file_name, index=False)

    # Carrega o Excel com openpyxl
    wb = openpyxl.load_workbook(output_file_name)
    sheet = wb.active

    # Ajusta largura das colunas com base no conteúdo
    for column in sheet.columns:
        max_length = 0
        column_letter = openpyxl.utils.get_column_letter(column[0].column)
        for cell in column:
            try:
                if len(str(cell.value)) > max_length:
                    max_length = len(cell.value)
            except:
                pass
        adjusted_width = (max_length + 1)
        sheet.column_dimensions[column_letter].width = adjusted_width

    # Centraliza texto em todas as células
    for row in sheet.iter_rows(min_row=2, values_only=False):
        for cell in row:
            cell.alignment = Alignment(horizontal='center', vertical='center')

    # Aplica cores alternadas nas linhas
    fill = PatternFill(start_color="d9d9d9", end_color="d9d9d9", fill_type="solid")
    for i, row in enumerate(sheet.iter_rows(min_row=2), start=2):
        if i % 2 == 0:
            for cell in row:
                cell.fill = fill

    # Adiciona soma da coluna (opcional)
    if sum_column_name and sum_column_name in df.columns:
        total_value = df[sum_column_name].sum()
        max_row = len(df) + 2  # +2 por cabeçalho e index
        col_idx = df.columns.get_loc(sum_column_name) + 1  # +1 porque openpyxl é 1-indexed
        sheet.cell(row=max_row, column=col_idx, value=f'Total {sum_column_name}: {total_value}')

    # Salva o ficheiro Excel formatado
    wb.save(output_file_name)


# #################################### PROCESSA CHEGADAS #######################
print("###### ------------------------------------------ ########")
print("###### CARREGAR EM BAIXO E ESCOLHER VÔOS CHEGADAS ######## ")
print("###### ------------------------------------------ ########")
uploaded = files.upload()
excel_file_name = next(iter(uploaded))  # Pega o nome do ficheiro carregado

# Carrega o ficheiro Excel num DataFrame
df = pd.read_excel(excel_file_name)

# --------------------------
# FILTROS E AJUSTES
# --------------------------
# Manter apenas colunas desejadas
desired_columns = ['Mov Type', 'Schedule Date Time', 'Flight Origin', 
                   'Flight Destination', 'Flight Nr', 'Capacity', 'Classification']
df = df[desired_columns]

# Filtrar apenas linhas com Classification 'I' ou 'NS'
df = df[df['Classification'].isin(['I', 'NS'])]

# Filtrar voos com capacidade >= 20 (valor ajustável pelo utilizador)
df = df[df['Capacity'] >= 20]

# Ordenar pelo horário programado
df.sort_values(by='Schedule Date Time', inplace=True)

# Adicionar coluna numerada (Quant)
df.insert(0, 'Quant', range(1, 1 + len(df)))

# Renomear colunas (ajustável pelo utilizador)
df.columns = ['___', 'Tipo', 'Hora', 'Origem', 'APIS', 'Vôo', 'Cap.', 'Class.']

# Nome do ficheiro de saída
output_file_name = 'Arrivals_modif.xlsx'

# Formata e salva o Excel
format_excel(df, output_file_name, sum_column_name='Cap.')

# Download do ficheiro final
files.download(output_file_name)
print(f"Chegadas filtradas e formatadas salvas em '{output_file_name}'")


